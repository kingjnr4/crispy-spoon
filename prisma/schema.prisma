// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             Int     @id @default(autoincrement())
  firstname      String
  lastname       String
  email          String  @unique
  phone          String  @unique
  account_number String  @unique
  balance        Decimal

  @@map("")
}

{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "src",
    "noImplicitAny": false,
    "typeRoots": ["./types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
